{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",           // або "ES2022", але NodeNext краще для Node.js
    "moduleResolution": "NodeNext", // обов'язково!
    "verbatimModuleSyntax": true,   // можна залишити true
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}